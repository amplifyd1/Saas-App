<%= simple_form_for @artifact, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@artifact[:name]) %>
  <%= f.input :key %>
  <%= error_span(@artifact[:key]) %>
  <%= f.input :project_id %>
  <%= error_span(@artifact[:project_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                artifacts_path, :class => 'btn btn-default' %>
<% end %>
